<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/studentListRvFragment">

    <fragment
        android:id="@+id/studentListRvFragment"
        android:name="com.example.class2demo2.feed.StudentList.StudentListRvFragment"
        android:label="Students"
        tools:layout="@layout/fragment_student_list">
        <action
            android:id="@+id/action_studentListRvFragment_to_studentDetailsFragment"
            app:destination="@id/studentDetailsFragment" />
        <action
            android:id="@+id/action_global_addFragment"
            app:destination="@id/addFragment" />
    </fragment>
    <fragment
        android:id="@+id/studentDetailsFragment"
        android:name="com.example.class2demo2.feed.Details.StudentDetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_student_details">
        <argument
            android:name="studentId"
            app:argType="string" />
        <action
            android:id="@+id/action_studentDetailsFragment_to_editFragment"
            app:destination="@id/editFragment" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.class2demo2.feed.Edit.EditFragment"
        android:label="Edit"
        tools:layout="@layout/fragment_edit">
        <argument
            android:name="studentId"
            app:argType="string" />
        <action
            android:id="@+id/action_editFragment_to_studentListRvFragment"
            app:destination="@id/studentListRvFragment" />
        <action
            android:id="@+id/action_editFragment_to_studentDetailsFragment"
            app:destination="@id/studentDetailsFragment"
            app:popUpTo="@id/studentDetailsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.class2demo2.feed.AddFragment"
        android:label="Add Student"
        tools:layout="@layout/fragment_add" />
    <action android:id="@+id/action_global_addFragment" app:destination="@id/addFragment"/>
    <action android:id="@+id/action_global_studentListRvFragment" app:destination="@id/studentListRvFragment" />
    <fragment
        android:id="@+id/postListRvFragment"
        android:name="com.example.class2demo2.feed.PostList.PostListRvFragment"
        android:label="fragment_post_list_rv"
        tools:layout="@layout/fragment_post_list_rv" />
    <action
        android:id="@+id/action_global_postListRvFragment"
        app:destination="@id/postListRvFragment"
        app:popUpTo="@id/postListRvFragment"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/postFragment"
        android:name="com.example.class2demo2.feed.Post.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post" >
        <argument
            android:name="postId"
            app:argType="string" />
    </fragment><action android:id="@+id/action_global_postFragment" app:destination="@id/postFragment"/>
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.example.class2demo2.feed.AddPostFragment"
        android:label="fragment_add_post"
        tools:layout="@layout/fragment_add_post" />
    <action android:id="@+id/action_global_addPostFragment" app:destination="@id/addPostFragment" />
</navigation>