<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/studentListRvFragment">

    <fragment
        android:id="@+id/studentListRvFragment"
        android:name="com.example.class2demo2.StudentListRvFragment"
        android:label="Students"
        tools:layout="@layout/fragment_student_list">
        <action
            android:id="@+id/action_studentListRvFragment_to_studentDetailsFragment"
            app:destination="@id/studentDetailsFragment" />
        <action
            android:id="@+id/action_studentListRvFragment_to_addFragment"
            app:destination="@id/addFragment" />
    </fragment>
    <fragment
        android:id="@+id/studentDetailsFragment"
        android:name="com.example.class2demo2.StudentDetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_student_details">
        <argument
            android:name="studentId"
            app:argType="string" />
        <action
            android:id="@+id/action_studentDetailsFragment_to_editFragment"
            app:destination="@id/editFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.class2demo2.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
    <action android:id="@+id/action_global_aboutFragment" app:destination="@id/aboutFragment" />
    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.class2demo2.EditFragment"
        android:label="fragment_edit"
        tools:layout="@layout/fragment_edit" >
        <argument
            android:name="studentId"
            app:argType="string" />
        <action
            android:id="@+id/action_editFragment_to_studentListRvFragment"
            app:destination="@id/studentListRvFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.class2demo2.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" />
</navigation>